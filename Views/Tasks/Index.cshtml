@model List<TaskManagerMVC.Models.TaskViewModel>

<h2>Lista Taskuri</h2>
<table class="table">
    <thead>
        <tr>
            <th>Titlu</th>
            <th>Descriere</th>
            <th>Finalizat</th>
            <th>Creat la</th>
            <th>Email utilizator</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.IsCompleted</td>
                <td>@task.CreatedAt.ToShortDateString()</td>
                <td>@task.UserEmail</td>
                <td>
                    <a asp-action="Details" asp-route-id="@task.Id">Detalii</a> |
                    <a asp-action="Edit" asp-route-id="@task.Id">Editare</a> |
                    <a asp-action="Delete" asp-route-id="@task.Id">Șterge</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Adaugă Task</a>
